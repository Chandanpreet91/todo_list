<!DOCTYPE html>
<html>
  <head>
    <title>TodoListWithAuth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
     <%= render 'shared/navbar' %>
      <% flash.each do |type,msg| %>
            <div class ='bg-<%= type %>p-3 rounded mb-2 shadow-sm'>
            <%= msg %>
      <% end %>
    <%= yield %>
  </body>
</html>
